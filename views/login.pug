extends layouts/login-layout.pug

block content
  .loginContainer
    h1 Login 
    form(action="", method="post")
      p.errorMessage #{errorMessage}
      input(type="text", name="userName", value=userName placeholder="Username or email", required)
      input(type="password", name="password", placeholder="Password" , required)
      input(type="submit", value="Login")
    span Does not have an account? 
    a(href="/register") Register Now